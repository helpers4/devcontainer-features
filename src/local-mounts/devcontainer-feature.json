{
  "id": "local-mounts",
  "version": "1.0.0",
  "name": "Local Development Files Mount",
  "description": "Mounts local Git, SSH, GPG, and npm configuration files into the devcontainer for seamless development authentication.",
  "documentationURL": "https://github.com/helpers4/devcontainer-features/tree/main/src/local-mounts",
  "options": {
    "username": {
      "type": "string",
      "default": "node",
      "description": "The username in the container to mount files for"
    }
  },
  "mounts": [
    {
      "source": "${localEnv:HOME}/.gitconfig",
      "target": "/home/${containerEnv:USERNAME:-node}/.gitconfig",
      "type": "bind"
    },
    {
      "source": "${localEnv:HOME}/.ssh",
      "target": "/home/${containerEnv:USERNAME:-node}/.ssh",
      "type": "bind"
    },
    {
      "source": "${localEnv:HOME}/.gnupg",
      "target": "/home/${containerEnv:USERNAME:-node}/.gnupg",
      "type": "bind"
    },
    {
      "source": "${localEnv:HOME}/.npmrc",
      "target": "/home/${containerEnv:USERNAME:-node}/.npmrc",
      "type": "bind"
    }
  ],
  "containerEnv": {
    "GPG_TTY": "/dev/pts/0"
  },
  "installsAfter": [
    "ghcr.io/devcontainers/features/common-utils"
  ]
}