{
  "id": "local-mounts",
  "version": "1.0.4",
  "name": "Local Development Files Mount",
  "description": "Mounts local Git, SSH, GPG, and npm configuration files into the devcontainer at /home/node for the 'node' user. Provides seamless development authentication.",
  "documentationURL": "https://github.com/helpers4/devcontainer/tree/main/src/local-mounts",
  "options": {},
  "mounts": [
    {
      "source": "${localEnv:HOME}/.gitconfig",
      "target": "/home/node/.gitconfig",
      "type": "bind"
    },
    {
      "source": "${localEnv:HOME}/.ssh",
      "target": "/home/node/.ssh",
      "type": "bind"
    },
    {
      "source": "${localEnv:HOME}/.gnupg",
      "target": "/home/node/.gnupg",
      "type": "bind"
    },
    {
      "source": "${localEnv:HOME}/.npmrc",
      "target": "/home/node/.npmrc",
      "type": "bind"
    },
    {
      "source": "${localEnv:SSH_AUTH_SOCK}",
      "target": "/ssh-agent",
      "type": "bind"
    }
  ],
  "containerEnv": {
    "GPG_TTY": "/dev/pts/0",
    "SSH_AUTH_SOCK": "/ssh-agent"
  },
  "installsAfter": [
    "ghcr.io/devcontainers/features/common-utils"
  ]
}